<article>
  <h2>社員一覧</h2>
  <table class="table table-hover">
    <% if flash.notice %>
      <div class="alert alert-primary" role="alert">
        <%= flash.notice %>
      </div>
    <% elsif flash.alert %>
      <div class="alert alert-danger" role="alert">
        <%= flash.alert %>
      </div>
    <% end %>
    <thead>
      <tr>
        <th scope="col">姓名</th>
        <th scope="col">slack_user_id</th>
        <th scope="col">slack_user_name</th>
        <th scope="col">有給休暇日数</th>
        <th scope="col">作成日</th>
        <th scope="col">アクション</th>
      </tr>
    </thead>
    <tbody>
      <% @employees.each do |employee| %>
        <tr>
          <th scope="row"><%= employee.full_name %></th>
          <td><%= employee.slack_user_id %></td>
          <td><%= employee.slack_user_name %></td>
          <td><%= employee.paid_vacation_days %></td>
          <td><%= employee.created_at.strftime("%Y-%m-%d") %></td>
          <td><%= link_to '編集', [ :edit, employee ] %> | <%= link_to '削除', employee,  method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</article>
