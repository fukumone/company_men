<%= form_for @employee do |f| %>
  <div class='form-group row'>
    <%= f.label :first_name, class: 'col-sm-1 col-form-label' %>
    <div class='col-sm-10'>
      <%= f.text_field :first_name, class: 'col-md-2 form-control' %>
    </div>
  </div>

  <div class='form-group row'>
    <%= f.label :last_name, class: 'col-sm-1 col-form-label' %>
    <div class='col-sm-10'>
      <%= f.text_field :last_name, class: 'col-md-2 form-control' %>
    </div>
  </div>
  <%= f.submit '登録', class: 'btn btn-primary' %>
<% end %>
