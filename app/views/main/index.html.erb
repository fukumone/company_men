<article class="time_sheet">
  <h2 class="_title">本日:<%= Time.current.strftime("%m月%d日") %>の勤務日程 <i class="fas fa-users"></i></h2>
  <div class="time_sheet_pagination">
    <%= paginate @employees %>
  </div>
  <table class="table table-hover">
    <thead>
      <tr>
        <th scope="col">社員</th>
        <th scope="col">出社日</th>
        <th scope="col">出勤</th>
        <th scope="col">退勤</th>
        <th scope="col">労働時間</th>
      </tr>
    </thead>
    <tbody>
      <% @employees.each do |employee| %>
        <% time_sheet =  employee.current_time_sheet %>
        <tr>
          <td scope="row"><%= link_to employee.full_name, employee %></td>
          <td><%= time_sheet.try(:work_day) %></td>
          <td><%= TimeSheet.sheet_format(time: time_sheet.try(:clock_in)) %></td>
          <td><%= TimeSheet.sheet_format(time: time_sheet.try(:clock_out)) %></td>
          <td><%= time_sheet.working_time %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div class="time_sheet_pagination">
    <%= paginate @employees %>
  </div>
</article>
